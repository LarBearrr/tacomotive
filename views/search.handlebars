<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
            <h1>Looks like we need your location...</h1>
            <form method="GET" action="/trucks" id="introForm">
                <input type="hidden" name="_lat" id="_lat" value>
                <input type="hidden" name="_lng" id="_lng" value>
                <div class="form-row">
                    <div class="col-12 col-md-9 mb-2 mb-md-0">
                        <input type="search" id="address" class="form-control" name="address" placeholder="Where are we looking?" required>
                    </div>
                    <div class="col-12 col-md-3">
                        <button type="submit" class="btn btn-block btn-primary" id="getTrucksButton">Go!</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/places.js@1.16.1"></script>
<script>
(function() {
  var placesAutocomplete = places({
    appId: 'plSH0SC69I1L',
    apiKey: '535c943cc81ab7e7d26189ef1b81927b',
    container: document.querySelector('#address'),
  });

  var $address = document.querySelector('#address-value')
  let $lat = document.getElementById('_lat');
  let $lng = document.getElementById('_lng');
  placesAutocomplete.on('change', function(e) {
    console.log(e);
    console.log(e.suggestion.hit._geoloc.lat, e.suggestion.hit._geoloc.lng);
    $lat.value = e.suggestion.hit._geoloc.lat
    $lng.value = e.suggestion.hit._geoloc.lng
  });

  placesAutocomplete.on('clear', function() {
    $address.textContent = 'none';
  });

})();
</script>