<div class="container">
    <div class="row">
        <div class="col-8 mx-auto">
            <h1>Your orders</h1>
            <table class="table table-hover table-striped">
                <tbody>
                    {{#each orders}}
                        <tr>
                            <td><a href="/orders/{{this._id}}">Order #{{this._id}}</a></td>
                            <td><span class="badge badge-pill badge-warning mr-1"> </span>{{status}}</td>
                            <td class="text-align-right">${{this.total}}</td>
                        </tr>
                    {{else}}
                    <p>No orders found.</p>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>