<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Customers</h1>
</div>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th width="25%">#</th>
                <th width="25%">Name</th>
                <th width="25%">Email</th>
                <th width="25%"></th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td><a href="/admin/customers/{{this._id}}/orders">View orders</a></td>
            </tr>
            {{else}}
            No customers found.
            {{/each}}
        </tbody>
    </table>
</div>