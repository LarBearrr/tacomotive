<div class="mt-3">
<h1>{{user.name}}</h1>
<h2><a href="mailto:{{user.email}}">{{user.email}}</a></h2>
<hr class="my-2">
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th width="25%">#</th>
                <th width="25%">Status</th>
                <th width="25%">Total</th>
                <th width="25%">Date</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <td><a href="/admin/orders/{{this._id}}">{{this._id}}</a></td>
                <td>{{this.status}}</td>
                <td>${{this.total}}</td>
                <td>{{this.date}}</td>
            </tr>
            {{else}}
            No orders found.
            {{/each}}
        </tbody>
    </table>
</div>