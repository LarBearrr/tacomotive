<h2 class="mt-3">Today's Orders</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th width="25%">#</th>
                <th width="25%">Status</th>
                <th width="25%">Total</th>
                <th width="25%">Date</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <td><a href="/admin/orders/{{this._id}}">{{this._id}}</a></td>
                <td>{{status}}</td>
                <td>${{total}}</td>
                <td>{{date}}</td>
            </tr>
            {{else}}
            No orders found.
            {{/each}}
        </tbody>
    </table>
</div>