<div class="mt-3">
<h1>Order #{{order._id}}<span class="float-right">${{order.total}}</span></h1>
{{#if status}}
<span class="badge badge-warning">{{{status}}}</span>
{{else}}
<span class="badge badge-success">Complete</span>
{{/if}}
<hr>
<h2>For: {{user.name}}</h2>
<h3><a href="mailto:{{user.email}}">{{user.email}}</a></h3>

<h4 class="mt-5">Items</h4>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th width="25%">Truck</th>
                <th width="25%">Item</th>
                <th width="25%">Quantity</th>
                <th width="25%">Total</th>
            </tr>
        </thead>
        <tbody>
            {{#each order.items}}
            <tr>
                <td>{{this.truck}}</td>
                <td>{{this.name}}</td>
                <td>{{this.quantity}}</td>
                <td>${{this.price}}</td>
            </tr>
            {{else}}
            No items found.
            {{/each}}
        </tbody>
    </table>
</div>

{{#if status}}
<a href="/admin/orders/{{order.id}}/process" class="btn btn-block btn-success" style="bottom: 0;">Process order</a>
{{/if}}