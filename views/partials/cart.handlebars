<h4 class="d-flex justify-content-between align-items-center mb-3">
    <span class="text-muted">Your order</span>
    <span class="badge badge-secondary badge-pill" id="itemTotal">{{order.items.length}}</span>
</h4>
<ul class="list-group mb-3">
    {{#each order.items}}
    <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div class="w-100">
            <h6 class="mb-1 text-muted">{{this.truck}}<span class="text-muted float-right">${{this.price}}</span></h5>
            <h6 class="my-0">{{this.name}}</h6>
            <small class="text-muted">{{this.description}}</small>
            <span class="float-right"><a href="/orders/items/remove/{{this.id}}"><i class="fa fa-minus fa-xs"></i></a><span class="badge badge-secondary mx-1">{{this.quantity}}</span><a href="/orders/items/add/{{this.id}}"><i class="fa fa-plus fa-xs"></i></a>
        </div>

    </li>
    {{/each}}
    <li class="list-group-item d-flex justify-content-between">
        <span>Total (USD)</span>
        <strong>${{order.total}}</strong>
    </li>
</ul>


