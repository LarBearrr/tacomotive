<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
<h3>Order #{{order._id}}<span class="float-right">${{order.total}}</span></h3>
{{order.status}}
<hr>
<h4 class="mt-5">Items</h4>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th width="25%">Truck</th>
                <th width="25%">Item</th>
                <th width="25%">Quantity</th>
                <th width="25%">Total</th>
            </tr>
        </thead>
        <tbody>
            {{#each order.items}}
            <tr>
                <td>{{this.truck}}</td>
                <td>{{this.name}}</td>
                <td>{{this.quantity}}</td>
                <td>${{this.price}}</td>
            </tr>
            {{else}}
            No items found.
            {{/each}}
        </tbody>
    </table>
        </div>
    </div>
</div>